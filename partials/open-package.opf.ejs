<?xml version="1.0" encoding="utf-8" standalone="no"?>
<package xmlns="http://www.idpf.org/2007/opf" xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:dcterms="http://purl.org/dc/terms/" version="3.0" xml:lang="en"
	unique-identifier="pub-identifier">
	<metadata><%
        // Check for required parameters
        if (typeof metadata.title === 'undefined' || metadata.title === null) {
            throw new Error('no title');
        }
        if (typeof metadata.languages === 'undefined' || metadata.languages === null) {
            throw new Error('no languages');
        }
        %>
        <% if (typeof metadata.identifier === 'undefined' && metadata.identifier) { %><dc:identifier><%= metadata.identifier %></dc:identifier><% } %>
		<dc:title id="pub-title"><%= metadata.title %></dc:title>
        <%
        metadata.subjects.forEach(function(subject) {
            %><dc:subject><%= subject %></dc:subject><%
        });
        %>
        <% if (typeof metadata.description === 'undefined' && metadata.description) { %><dc:description><%= metadata.description %></dc:description><% } %>
        <% if (typeof metadata.date === 'undefined' && metadata.date) { %><dc:date><%= metadata.date %></dc:date><% } %>
        <% if (typeof metadata.date === 'undefined' && metadata.date) { %><meta property="dcterms:modified"><%= metadata.date %></meta><% } %>
        <% if (typeof metadata.format === 'undefined' && metadata.format) { %><dc:format><%= metadata.format %></dc:format><% } %>
        <%
        metadata.languages.forEach(function(language) {
            %><dc:language><%= language %></dc:language><%
        });
        %>
        <%
        if (metadata.types) {
        metadata.types.forEach(function(type) {
            %><dc:type><%= type %></dc:type><%
        });
        }
        %>
        <%
        if (metadata.sources) {
        metadata.sources.forEach(function(source) {
            %><dc:source><%= source %></dc:source><%
        });
        }
        %>
        <%
        if (metadata.creators) {
        metadata.creators.forEach(function(creator) { %>
        <dc:creator <%
                if (creator.id) { %> id="<%= creator.id %>"<% }
                if (creator.fileAs) { %> opf:file-as="<%= creator.fileAs %>"<% }
                if (creator.role) { %> opf:role="<%= creator.role %>"<% }
                %> ><%= creator.name %></dc:creator><%
        });
        }
        %>
        <%
        if (metadata.contributors) {
        metadata.contributors.forEach(function(contributor) {%>
        <dc:contributor <%
                if (contributor.id) { %> id="<%= contributor.id %>"<% }
                if (contributor.fileAs) { %> opf:file-as="<%= contributor.fileAs %>"<% }
                if (contributor.role) { %> opf:role="<%= contributor.role %>"<% }
                %> ><%= contributor.name %></dc:contributor><%
            
        });
        }
        %>
        <% if (typeof metadata.publisher === 'undefined' && metadata.publisher) { %><dc:publisher><%= metadata.publisher %></dc:publisher><% } %>
        <% if (typeof metadata.relation === 'undefined' && metadata.relation) { %><dc:relation><%= metadata.relation %></dc:relation><% } %>
        <% if (typeof metadata.coverage === 'undefined' && metadata.coverage) { %><dc:coverage><%= metadata.coverage %></dc:coverage><% } %>
        <% if (typeof metadata.rights === 'undefined' && metadata.rights) { %><dc:rights><%= metadata.rights %></dc:rights><% } %>
	</metadata>
	<manifest>
    <%
    manifest.forEach(function(item) {
      %><item id="<%= item.id %>" <%
        if (item.properties) { %> properties="<%= item.properties %>" <% }
       %>href="<%= item.href %>" media-type="<%= item.type %>"/><%
    });
    %>
	</manifest>
	<spine>
        <%
        var spine = [];
        manifest.forEach(function(item) { if (item.spineorder) spine.push(item); });
        spine.sort(function(a, b) {
            if (a.spineorder < b.spineorder) return -1;
            else if (a.spineorder === b.spineorder) return 0;
            else return 1;
        });
        spine.forEach(function(item) {
            %><itemref idref="<%= item.id %>" <%
                if (item.spinelinear) { %> linear="<%= item.spinelinear %>" <% }
            %> ><%
        });
        %>
	</spine>
</package>
